@model TMDT_Web.Models.Domain.OrderDetail
@{
    ViewBag.Title = "Momo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="center">
            <h3>Order ID: @Model.OrderID</h3>
        </div>
        <div class="center">
            <h3>Phone Number: @Model.Order.OrderPhoneNumber</h3>
        </div>
        <div class="center">
            <h3>Address: @Model.Order.Address</h3>
        </div>
        <div class="center">
            <h3>Total money: @ViewBag.total</h3>
        </div>
        <div class="center">
            <img src="~/Templates/IT-Next/images/Pay/MomoPay.jpg" />
        </div>
    </div>
</div>

