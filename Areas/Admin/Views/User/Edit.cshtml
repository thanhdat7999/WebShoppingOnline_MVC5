@model TMDT_Web.Models.Domain.Account
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- inner page banner -->
<div id="inner_banner" class="section inner_banner_section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="full">
                    <div class="title-holder">
                        <div class="title-holder-cell text-left">
                            <h1 class="page-title">Edit user</h1>
                            <ol class="breadcrumb">
                                <li><a href="@Url.Action("Index","Home",new { area=""})">Home</a></li>
                                <li class="active">Edit user</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end inner page banner -->

<div class="row">
    <div class="col-lg-12">
        <div class="side_bar_blog col-lg-3">
            <h4>OUR SERVICE</h4>
            <div class="categary">
                <ul>
                    <li><a href="@Url.Action("Index","AdminHome",new { area= "Admin"})"><i class="fa fa-angle-right"></i> Home</a></li>
                    <li><a href="@Url.Action("Index","Company",new { area= "Admin"})"><i class="fa fa-angle-right"></i> Companies</a></li>
                    <li><a href="@Url.Action("Index","Brand",new { area= "Admin"})"><i class="fa fa-angle-right"></i> Brands</a></li>
                    <li><a href="@Url.Action("Index","Product",new { area= "Admin"})"><i class="fa fa-angle-right"></i> Products</a></li>
                    <li><a href="@Url.Action("Index","User",new { area= "Admin"})"><i class="fa fa-angle-right"></i> Users</a></li>
                    <li><a href="@Url.Action("Index","Order",new { area= "Admin"})"><i class="fa fa-angle-right"></i> Orders</a></li>
                </ul>
            </div>
        </div>
        <div class="col-lg-9 float-left" style="margin-top:30px">
            <form action="@Url.Action("Edit","User")" method="post" enctype="multipart/form-data">
                <table class="table">
                    <tr>
                        <td>
                            <input type="hidden" name="UserID" value="@Model.UserID" />
                            <input type="hidden" name="userName" value="@Model.UserName" />
                        </td>
                    </tr>
                    <tr>
                        <td>First Name</td>
                        <td><input type="text" id="FirstName" name="FirstName" value="@Model.FirstName" /></td>
                    </tr>
                    <tr>
                        <td>Last Name</td>
                        <td><input type="text" id="LastName" name="LastName" value="@Model.LastName" /></td>
                    </tr>
                    <tr>
                        <td>Address</td>

                        <td><input type="text" id="Address" name="Address" value="@Model.Address" /></td>
                    </tr>
                    <tr>
                        <td>Age</td>
                        <td><input type="text" id="Age" name="Age" value="@Model.Age" /></td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td><input type="text" id="Email" name="Email" value="@Model.Email" /></td>
                    </tr>
                    <tr>
                        <td>Password</td>
                        <td><input type="text" id="Password" name="Password" value="@Model.Password" /></td>
                    </tr>
                    <tr>
                        <td>User role</td>
                        <td height="60"> @Html.DropDownList("roleID", null, htmlAttributes: new { @class = "form-control", size = "1", @style = "width: 120px" })</td>
                    </tr>
                    <tr>
                        <td>
                            <input type="submit" value="Edit" />
                        </td>
                        <td>
                            @Html.ActionLink("Quay về trang chính", "Index")
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</div>

