@model TMDT_Web.Models.Domain.Account
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- inner page banner -->
<div id="inner_banner" class="section inner_banner_section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="full">
                    <div class="title-holder">
                        <div class="title-holder-cell text-left">
                            <h1 class="page-title">Register</h1>
                            <ol class="breadcrumb">
                                <li><a href="index.html">Home</a></li>
                                <li class="active">Register</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end inner page banner -->
<div class="section padding_layout_1">
    <div class="container">
        <div class="row">
            <div class="col-xl-2 col-lg-2 col-md-12 col-sm-12 col-xs-12"></div>
            <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-xs-12">
                <div class="row">
                    <div class="full">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="main_heading text_align_center">
                                <h2>Register</h2>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 appointment_form">
                            <div class="form_section">
                                <form class="form_contant" action="@Url.Action("DoRegister", "Authentication")" method="post">
                                    <fieldset class="row">
                                        <div class="field col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                            <input class="field_custom" placeholder="FirstName *" type="text" name="FirstName" required>
                                        </div>
                                        <div class="field col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                            <input class="field_custom" placeholder="LastName *" type="text" name="LastName" required>
                                        </div>
                                        <div class="field col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                            <input class="field_custom" placeholder="User Name *" type="text" name="UserName" required>
                                            <p style="color:red">@ViewBag.errorUser</p>
                                        </div>
                                        <div class="field col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                            <input class="field_custom" placeholder="Phone Number *" type="text" name="PhoneNumber" required>
                                        </div>
                                        <div class="field col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                            <input class="field_custom" placeholder="Address *" type="text" name="Address" required>
                                        </div>
                                        <div class="field col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                            <input class="field_custom" placeholder="Age *" type="text" name="Age" required>
                                        </div>
                                        <div class="field col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                            <input class="field_custom" placeholder="Email *" type="text" name="Email" required>
                                            <label style="color:red">@ViewBag.errorEmail</label>
                                        </div>
                                        <div class="field col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                            <input class="field_custom" placeholder="Password *" type="password" name="Password" required>
                                        </div>
                                        <div class="center">
                                            <button class="btn main_bt" type="submit">Register NOW</button>
                                        </div>
                                        <br />
                                        <div class="center">
                                            <a href="@Url.Action("Login","Authentication")">Back To Login...</a>
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}