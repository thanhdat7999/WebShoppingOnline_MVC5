@model TMDT_Web.Models.Domain.Account
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- inner page banner -->
<div id="inner_banner" class="section inner_banner_section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="full">
                    <div class="title-holder">
                        <div class="title-holder-cell text-left">
                            <h1 class="page-title">Login Website</h1>
                            <ol class="breadcrumb">
                                <li><a href="index.html">Home</a></li>
                                <li class="active">Login Website</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end inner page banner -->
<div class="section padding_layout_1">
    <div class="container">
        <div class="row">
            <div class="col-xl-2 col-lg-2 col-md-12 col-sm-12 col-xs-12"></div>
            <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-xs-12">
                <div class="row">
                    <div class="full">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="main_heading text_align_center">
                                <h2>Login Website</h2>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 appointment_form">
                            <div class="form_section">
                                <h3 class="center" style="color:red">@ViewBag.error</h3>
                                <form class="form_contant" action="@Url.Action("DoLogin","Authentication")" method="post">
                                    <fieldset class="row">
                                        <div class="field col-lg-12 col-md-6 col-sm-12 col-xs-12">
                                            <input class="field_custom" placeholder="Email *" type="text" name="Email" required>
                                        </div>
                                        <div class="field col-lg-12 col-md-6 col-sm-12 col-xs-12">
                                            <input class="field_custom" placeholder="Password *" type="password" name="Password" required>
                                        </div>
                                        <div class="center">
                                            <button class="btn main_bt" type="submit">SUBMIT NOW</button>
                                        </div>
                                        <br />
                                        <div class="center">
                                            <a href="@Url.Action("Register","Authentication")">Register...</a>
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


